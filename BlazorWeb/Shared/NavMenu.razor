<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">BlazorWeb</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="usuarios/listado">
                <span class="oi oi-person" aria-hidden="true"></span> Usuarios
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="recursos/listado">
                <span class="oi oi-person" aria-hidden="true"></span> Recursos
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="tareas/listado">
                <span class="oi oi-check" aria-hidden="true"></span> Tareas
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="detalles/listado">
                <span class="oi oi-clock" aria-hidden="true"></span> Detalles
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}